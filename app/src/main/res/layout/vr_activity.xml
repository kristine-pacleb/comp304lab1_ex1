<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VRActivity">

    <TextView
        android:id="@+id/tvVRActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vr_Activity"
        android:textColor="@color/text"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/vr-OnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onCreate_executed"
        android:textColor="@color/text"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/vr-OnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onStart_executed"
        android:textColor="@color/text"
        android:textSize="40sp" />

</LinearLayout>